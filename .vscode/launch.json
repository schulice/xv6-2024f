{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RISC-V Remote Debug",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/riscv64-linux-gnu-gdb",
            "program": "${workspaceFolder}/kernel/kernel",
            "miDebuggerServerAddress": "127.0.0.1:26000",
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "text": "set confirm off"
                },
                {
                    "text": "set architecture riscv:rv64"
                },
                {
                    "text": "set disassemble-next-line auto"
                },
                {
                    "text": "set riscv use-compressed-breakpoints yes"
                }
            ]
        },
        {
            "name": "attach to qemu-static",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerServerAddress": "localhost:1234"
        },
        {
            "name": "(gdb) 附加",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/kernel/kernel",
            "MIMode": "gdb",
            "debugServer": 26000,
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Attach to QEMU",
            "type": "gdb",
            "request": "attach",
            "executable": "kernel/kernel",
            "target": "localhost:26000",
            "remote": true,
            "gdbpath": "/usr/bin/riscv64-linux-gnu-gdb",
            "cwd": "${workspaceRoot}",
            "autorun": [
                "set substitute-path /root ."
            ]
        },
    ]
}